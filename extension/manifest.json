{
  "manifest_version": 2,
  "name": "YouTube Discord RPC",
  "version": "1.0.0",
  "description": "Show your YouTube activity on Discord",
  "permissions": [
    "nativeMessaging",
    "*://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-discord-rpc@example.com",
      "strict_min_version": "50.0"
    }
  }
}
